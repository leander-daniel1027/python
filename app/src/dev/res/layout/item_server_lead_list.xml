<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        app:cardCornerRadius="@dimen/dp3"
        app:cardElevation="@dimen/dp5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_parent_server"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp10">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp2">

                    <com.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_column"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"/>

                    <com.customviews.CustomTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:ellipsize="end"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp2">

                    <com.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/father_name_column"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"/>

                    <com.customviews.CustomTextView
                        android:id="@+id/tv_father_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:ellipsize="end"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp2">

                    <com.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loan_amount_column"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"/>

                    <com.customviews.CustomTextView
                        android:id="@+id/tv_loan_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:ellipsize="end"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp2">

                    <com.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_address_column"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"/>

                    <com.customviews.CustomTextView
                        android:id="@+id/tv_current_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:ellipsize="end"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp2">

                    <com.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/latitude"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"/>

                    <com.customviews.CustomTextView
                        android:id="@+id/tv_latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:ellipsize="end"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp2">

                    <com.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/longitude"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"/>

                    <com.customviews.CustomTextView
                        android:id="@+id/tv_longitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:ellipsize="end"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp2">

                    <com.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dob_column"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"/>

                    <com.customviews.CustomTextView
                        android:id="@+id/tv_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:ellipsize="end"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp2">

                    <com.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile1_column"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"/>

                    <com.customviews.CustomTextView
                        android:id="@+id/tv_mobile1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:ellipsize="end"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp2">

                    <com.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile2_column"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"/>

                    <com.customviews.CustomTextView
                        android:id="@+id/tv_mobile2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:ellipsize="end"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/textSmall"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <com.customviews.CustomTextView
                        android:id="@+id/tv_telecalling"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp30"
                        android:background="@drawable/bg_btn_pink"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:text="@string/telecalling"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textMedium"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                    <com.customviews.CustomTextView
                        android:id="@+id/tv_fi"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp30"
                        android:background="@drawable/bg_btn_pink"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dp5"
                        android:paddingLeft="@dimen/dp15"
                        android:paddingRight="@dimen/dp15"
                        android:text="@string/fi"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/textMedium"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                </LinearLayout>


            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/navi"
                android:id="@+id/navi_icon"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_margin="@dimen/dp10"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <!-- <View
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:layout_marginTop="@dimen/margin_5"
         android:background="@color/gray" />-->


</LinearLayout>