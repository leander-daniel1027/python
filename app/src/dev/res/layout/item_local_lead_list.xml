<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp5"
        app:cardElevation="@dimen/dp5"
        app:cardCornerRadius="@dimen/dp3">

        <LinearLayout
            android:id="@+id/ll_parent_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp2">

                <com.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_column"
                    app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSmall" />

                <com.customviews.CustomTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                    android:ellipsize="end"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp5"
                android:padding="@dimen/dp2">

                <com.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/father_name_column"
                    app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSmall" />

                <com.customviews.CustomTextView
                    android:id="@+id/tv_father_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                    android:ellipsize="end"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp5"
                android:padding="@dimen/dp2">

                <com.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_amount_column"
                    app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSmall" />

                <com.customviews.CustomTextView
                    android:id="@+id/tv_loan_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                    android:ellipsize="end"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp5"
                android:padding="@dimen/dp2">

                <com.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_address_column"
                    app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSmall" />

                <com.customviews.CustomTextView
                    android:id="@+id/tv_current_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                    android:ellipsize="end"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="horizontal"
                android:padding="@dimen/dp2">

                <com.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/latitude"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSmall"
                    app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"/>

                <com.customviews.CustomTextView
                    android:id="@+id/tv_latitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:ellipsize="end"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSmall"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:orientation="horizontal"
                android:padding="@dimen/dp2">

                <com.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/longitude"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSmall"
                    app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"/>

                <com.customviews.CustomTextView
                    android:id="@+id/tv_longitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:ellipsize="end"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSmall"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp5"
                android:padding="@dimen/dp2">

                <com.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dob_column"
                    app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSmall" />

                <com.customviews.CustomTextView
                    android:id="@+id/tv_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                    android:ellipsize="end"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp5"
                android:padding="@dimen/dp2">

                <com.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile1_column"
                    app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSmall" />

                <com.customviews.CustomTextView
                    android:id="@+id/tv_mobile1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                    android:ellipsize="end"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp5"
                android:padding="@dimen/dp2">

                <com.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile2_column"
                    app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSmall" />

                <com.customviews.CustomTextView
                    android:id="@+id/tv_mobile2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                    android:ellipsize="end"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/textSmall" />

            </LinearLayout>





        </LinearLayout>

    </android.support.v7.widget.CardView>



   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/gray" />-->


</LinearLayout>