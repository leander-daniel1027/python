<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">

            <com.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/cheque_details"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textLarge"
                app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/bg_transparent_layout"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp20"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingTop="@dimen/dp20">


                <com.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/applicant"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textMedium"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/dp10"
                              android:orientation="horizontal"
                              android:weightSum="1">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:textColorHint="@color/editTextHintColor">

                        <com.customviews.CustomEditText
                            android:id="@+id/et_applicant_bank_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name_of_bank"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:drawableRight="@mipmap/drop_icon_gold"
                            android:editable="false"
                            android:focusable="false"
                            android:clickable="true"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/editTextTextColor"
                            android:textColorHint="@color/editTextHintColor"
                            android:textSize="@dimen/edit_text_text_size"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                        />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_weight=".5"
                        android:textColorHint="@color/editTextHintColor">

                        <com.customviews.CustomEditText
                            android:id="@+id/et_applicant_branch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/branch"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/editTextTextColor"
                            android:textColorHint="@color/editTextHintColor"
                            android:textSize="@dimen/edit_text_text_size"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                        />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/dp10"
                              android:orientation="horizontal"
                              android:weightSum="1">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:textColorHint="@color/editTextHintColor">
                        <com.customviews.CustomEditText
                            android:id="@+id/et_applicant_cheque_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/cheque_no"
                            android:imeOptions="actionNext"
                            android:inputType="number|none"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/editTextTextColor"
                            android:textColorHint="@color/editTextHintColor"
                            android:textSize="@dimen/edit_text_text_size"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                        />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <com.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp30"
                    android:text="@string/coapplicant"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textMedium"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/dp10"
                              android:orientation="horizontal"
                              android:weightSum="1">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:textColorHint="@color/editTextHintColor">

                        <com.customviews.CustomEditText
                            android:id="@+id/et_coapplicant_bank_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name_of_bank"
                            android:imeOptions="actionNext"
                            android:focusable="false"
                            android:editable="false"
                            android:drawableRight="@mipmap/drop_icon_gold"
                            android:clickable="true"
                            android:inputType="text"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/editTextTextColor"
                            android:textColorHint="@color/editTextHintColor"
                            android:textSize="@dimen/edit_text_text_size"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                        />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_weight=".5"
                        android:textColorHint="@color/editTextHintColor">

                        <com.customviews.CustomEditText
                            android:id="@+id/et_coapplicant_branch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/branch"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/editTextTextColor"
                            android:textColorHint="@color/editTextHintColor"
                            android:textSize="@dimen/edit_text_text_size"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                        />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/dp10"
                              android:orientation="horizontal"
                              android:weightSum="1">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:textColorHint="@color/editTextHintColor">

                        <com.customviews.CustomEditText
                            android:id="@+id/et_coapplicant_cheque_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/cheque_no"
                            android:imeOptions="actionNext"
                            android:inputType="number|none"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/editTextTextColor"
                            android:textColorHint="@color/editTextHintColor"
                            android:textSize="@dimen/edit_text_text_size"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                        />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>
            </LinearLayout>






        </LinearLayout>


    </ScrollView>

</RelativeLayout>