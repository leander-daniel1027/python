<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_mfi_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:background="@drawable/bg_transparent_layout"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp5"
                android:paddingBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp10">

                <ImageView
                    android:id="@+id/iv_remove_view"
                    android:layout_width="@dimen/dp30"
                           android:layout_height="@dimen/dp30"
                           android:layout_gravity="right"
                           android:layout_marginRight="@dimen/dp10"
                           android:src="@mipmap/less_btn"
                           android:visibility="gone"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/dp5"
                              android:orientation="horizontal"
                              android:weightSum="1">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_weight=".5"
                        android:textColorHint="@color/colorWhite">

                        <com.customviews.CustomEditText
                            android:id="@+id/et_mfi_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name_of_mfi"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/textMedium"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                        />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_weight=".5"
                        android:textColorHint="@color/colorWhite">

                        <com.customviews.CustomEditText
                            android:id="@+id/et_years_operation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/years_of_operation"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/textMedium"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                        />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/dp5"
                              android:orientation="horizontal"
                              android:weightSum="1">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_weight=".5"
                        android:textColorHint="@color/colorWhite">

                        <com.customviews.CustomEditText
                            android:id="@+id/et_total_customers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/total_customers"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/textMedium"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                        />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_weight=".5"
                        android:textColorHint="@color/colorWhite">

                        <com.customviews.CustomEditText
                            android:id="@+id/et_repayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/repayment"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/textMedium"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"
                        />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_add_view"
                    android:layout_width="@dimen/dp30"
                           android:layout_height="@dimen/dp30"
                           android:layout_gravity="right"
                           android:layout_marginRight="@dimen/dp10"
                           android:layout_marginTop="@dimen/dp10"
                           android:src="@mipmap/add_btn"/>
            </LinearLayout>




</LinearLayout>