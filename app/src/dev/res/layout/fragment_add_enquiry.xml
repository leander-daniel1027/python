<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/splash_bg"
                android:clickable="true">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:padding="@dimen/dp10">


            <com.customviews.CustomTextView
                android:id="@+id/tv_my_enquiries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/bg_btn_white"
                android:gravity="center"
                android:text="@string/my_enquiries"
                android:textColor="@color/color_black"
                android:textSize="@dimen/textLarge"
                app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/dp5"
                          android:orientation="horizontal"
                          android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:textColorHint="@color/editTextHintColor">

                    <com.customviews.CustomEditText
                        android:id="@+id/et_applicant_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/applicants_name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="@dimen/dp15"
                        android:textColor="@color/editTextTextColor"
                        android:textSize="@dimen/edit_text_text_size"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:textColorHint="@color/editTextHintColor"
                >

                    <com.customviews.CustomEditText
                        android:id="@+id/et_applicant_father_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/applicants_father_name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="@dimen/dp15"
                        android:textColor="@color/editTextTextColor"
                        android:textSize="@dimen/edit_text_text_size"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/dp5"
                          android:orientation="horizontal"
                          android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:textColorHint="@color/editTextHintColor"
                >

                    <com.customviews.CustomEditText
                        android:id="@+id/et_applicant_mother_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/applicants_mother_name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="@dimen/dp15"
                        android:textColor="@color/editTextTextColor"
                        android:textSize="@dimen/edit_text_text_size"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:textColorHint="@color/editTextHintColor">

                    <com.customviews.CustomEditText
                        android:id="@+id/et_spouse_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/spouse_name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="@dimen/dp15"
                        android:textColor="@color/editTextTextColor"
                        android:textSize="@dimen/edit_text_text_size"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:textColorHint="@color/editTextHintColor">

                <com.customviews.CustomEditText
                    android:id="@+id/et_applicant_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/applicants_dob"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="@dimen/dp15"
                    android:textColor="@color/editTextTextColor"
                    android:textSize="@dimen/edit_text_text_size"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:textColorHint="@color/editTextHintColor">

                <com.customviews.CustomEditText
                    android:id="@+id/et_current_address_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/area"
                    android:imeOptions="actionNext"
                    android:inputType="textPostalAddress"
                    android:padding="@dimen/dp15"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableRight="@mipmap/drop_icon_gold"
                    android:textColor="@color/editTextTextColor"
                    android:textSize="@dimen/edit_text_text_size"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/dp5"
                          android:orientation="horizontal"
                          android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:textColorHint="@color/editTextHintColor"
                >

                    <com.customviews.CustomEditText
                        android:id="@+id/et_applicant_mobile1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/applicants_mobile_number1"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="@dimen/dp15"
                        android:textColor="@color/editTextTextColor"
                        android:textSize="@dimen/edit_text_text_size"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:textColorHint="@color/editTextHintColor"
                >

                    <com.customviews.CustomEditText
                        android:id="@+id/et_applicant_mobile2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/applicants_mobile_number2"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="@dimen/dp15"
                        android:textColor="@color/editTextTextColor"
                        android:textSize="@dimen/edit_text_text_size"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/dp5"
                          android:orientation="horizontal"
                          android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:textColorHint="@color/editTextHintColor"
                >

                    <com.customviews.CustomEditText
                        android:id="@+id/et_loan_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/loan_amount"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:padding="@dimen/dp15"
                        android:textColor="@color/editTextTextColor"
                        android:textSize="@dimen/edit_text_text_size"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:textColorHint="@color/editTextHintColor"
                >

                    <com.customviews.CustomEditText
                        android:id="@+id/et_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pincode"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/dp15"
                        android:textColor="@color/editTextTextColor"
                        android:textSize="@dimen/edit_text_text_size"
                        app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:textColorHint="@color/editTextHintColor">

                <com.customviews.CustomEditText
                    android:id="@+id/et_applicant_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/applicants_address"
                    android:imeOptions="actionNext"
                    android:inputType="text|textMultiLine"
                    android:lines="4"
                    android:padding="@dimen/dp15"
                    android:textColor="@color/editTextTextColor"
                    android:textSize="@dimen/edit_text_text_size"
                    app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/dp5"
                          android:orientation="horizontal"
                          android:weightSum="1">

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight=".5"
                              android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/editTextHintColor">

                        <com.customviews.CustomEditText
                            android:id="@+id/et_doc_type1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:drawableRight="@mipmap/drop_down_pink"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:hint="@string/select_document1"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/editTextTextColor"
                            android:textSize="@dimen/edit_text_text_size"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:textColorHint="@color/editTextHintColor">

                        <com.customviews.CustomEditText
                            android:id="@+id/et_doc1_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:hint="@string/doc1_number"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:lines="1"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/editTextTextColor"
                            android:textSize="@dimen/edit_text_text_size"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
                    </android.support.design.widget.TextInputLayout>


                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_image_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp5"
                        app:cardCornerRadius="@dimen/dp2"
                        app:cardElevation="@dimen/dp5">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_id_image"
                            android:layout_width="@dimen/dp140"
                            android:layout_height="@dimen/dp140"
                            android:padding="@dimen/dp15"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/default_image"/>


                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight=".5"
                              android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/editTextHintColor">

                        <com.customviews.CustomEditText
                            android:id="@+id/et_doc_type2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:drawableRight="@mipmap/drop_down_pink"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:hint="@string/select_document2"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/editTextTextColor"
                            android:textSize="@dimen/edit_text_text_size"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:textColorHint="@color/editTextHintColor">

                        <com.customviews.CustomEditText
                            android:id="@+id/et_doc2_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:hint="@string/doc2_number"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:lines="1"
                            android:padding="@dimen/dp15"
                            android:textColor="@color/editTextTextColor"
                            android:textSize="@dimen/edit_text_text_size"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>
                    </android.support.design.widget.TextInputLayout>


                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp5"
                        app:cardCornerRadius="@dimen/dp2"
                        app:cardElevation="@dimen/dp5">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_aadhar_image"
                            android:layout_width="@dimen/dp140"
                            android:layout_height="@dimen/dp140"
                            android:padding="@dimen/dp15"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/default_image"/>

                        <com.customviews.CustomTextView
                            android:id="@+id/text_aadhar_filename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/textMedium"
                            app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </LinearLayout>


            <com.customviews.CustomTextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginTop="@dimen/dp30"
                android:background="@drawable/bg_btn_pink"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textLarge"
                app:custom_font="@string/GOTHAM_ROUNDED_BOOK"/>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>