<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.customviews.CustomTextView
        android:id="@+id/tv_heading_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:text="@string/app_name_full"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/header_app_name"
        app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"/>

    <com.customviews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_heading_1"
        android:layout_marginBottom="@dimen/dp10"
        android:text="@string/app_name_postfix"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/header2"
        app:custom_font="@string/GOTHAM_ROUNDED_MEDIUM"/>

</RelativeLayout>