<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.solutionavenues.deedee.ui.dashboard.DashboardActivity">

    <RelativeLayout
        android:id="@+id/ll_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPurpleLight"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_menu_left"
            android:layout_width="@dimen/dp40"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@mipmap/menu"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp45"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="@dimen/dp10"
            android:scaleType="fitCenter"
            android:src="@mipmap/back"
            android:visibility="gone" />

        <com.customviews.TypefaceTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textLarge"
            android:visibility="gone"
            app:custom_font="@string/GOTHAM_ROUNDED_BOOK" />

    </RelativeLayout>


</LinearLayout>



